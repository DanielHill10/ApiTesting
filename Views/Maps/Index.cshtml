@{
}

@model ApiTesting.Models.JourneyCalculator

<h1>Maps Testing</h1>

<form asp-action="Index">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="PostCodeOne">Postcode One</label>
            <input type="text" class="form-control" asp-for="PostCodeOne" placeholder="Postcode One">
        </div>
        <div class="form-group col-md-6">
            <label asp-for="PostCodeTwo">Postcode Two</label>
            <input type="text" class="form-control" asp-for="PostCodeTwo" placeholder="Postcode Two">
        </div>
    </div>
    <button type="submit" class="btn btn-primary" value="Calculate">Calculate Mileage</button>
</form>

<hr/>

<form asp-action="CalculateMileage">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="PostCodeOne">Postcode One</label>
            <input type="text" class="form-control" asp-for="PostCodeOne" placeholder="Postcode One">
        </div>
        <div class="form-group col-md-6">
            <label asp-for="PostCodeTwo">Postcode Two</label>
            <input type="text" class="form-control" asp-for="PostCodeTwo" placeholder="Postcode Two">
        </div>
    </div>
    <button type="submit" class="btn btn-primary" value="Calculate">Calculate Mileage</button>
</form>

<hr/>
@if (Model != null)
{
    <h2>Distance Value</h2>
    <h2>@Model.DistanceValue</h2>
}